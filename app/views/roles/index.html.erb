<div class="index">

  <% provide(:title, 'Roles') %>

  <h1>Roles</h1>
  <p>See a list of all roles in the database:</p>

  <table class="all-db-entries">
    <% @roles.each do |role| %>
      <tr>
        <td class="first-table-entry">
          <%= link_to role.character, role_path(role) %>
        </td>
        <td class="edit-row">
          <%= link_to 'edit', edit_role_path(role.id) %>
        </td>
        <td class="delete-row">
          <%= link_to 'delete', role_path(role.id),
                      method: :delete,
                      data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>

  </table>

  <div class="btn btn-add">
    <%= link_to "add role", new_role_path %>
  </div>

</div>