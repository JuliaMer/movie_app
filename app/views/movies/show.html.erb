<div class="show">

  <h1><%= @movie.title %></h1>

  <section class="movie-data">
    <h3>Details</h3>

    <p2>
      published: <%= @movie.year %>
    </p2>

    <p2>
      genre: <%= @movie.find_genre %>
    </p2>
  </section>

  <section class="cast-information">

    <section class="btn-besides-text">
      <p3>Cast</p3>

      <div class="btn btn-add btn-role">
        <%= link_to 'add new role', new_role_path %>
      </div>
    </section>

    <table class="all-db-entries">
      <tr>
        <th>Actor</th>
        <th>Character</th>
        <th></th>
        <th></th>
      </tr>
      <% @roles.each do |role| %>
        <tr>
          <td class="second-table-entry">
            <%= link_to Actor.find(role.actor_id).name, actor_path(role.actor_id) %>
          </td>
          <td class="third-table-entry">
            <%= link_to role.character, role_path(role) %>
          </td>
          <td class="edit-row">
            <%= link_to 'edit', edit_role_path(role) %>
          </td>
          <td class="delete-row">
            <%= link_to 'delete', role_path(role.id),
                        method: :delete,
                        data: {confirm: 'Are you sure?'} %>
          </td>
        </tr>
      <% end %>

    </table>

  </section>


  <section class="trailer">
    <%= link_to 'Trailer', @movie.find_url %>
  </section>

  <div class="btn btn-edit">
    <%= link_to 'edit', edit_movie_path(@movie.id) %>
  </div>

  <div class="btn btn-back">
    <%= link_to 'back', movies_path %>
  </div>

</div>