<div class="show">

  <h1><%= @movie.title %></h1>

  <section class="movie-data">
    <h3>Details</h3>
    <p2>
      published: <%= @movie.year %>
    </p2>

    <p2>
      genre: <%= @movie.find_genre %>
    </p2>
  </section>

  <section class="cast-information">
    <h3>Cast</h3>
    <table class="all-db-entries">
      <tr>
        <th>Actor</th>
        <th>Character</th>
        <th>
          <%= link_to 'create role', new_role_path %>
        </th>
      </tr>
      <% @roles.each do |role| %>
        <tr>
          <td>
            <%= link_to Actor.find(role.actor_id).name, actor_path(role.actor_id) %>
          </td>
          <td>
            <%= link_to role.character, role_path(role) %>
          </td>
          <td class="edit-row">
            <%= link_to 'edit', edit_role_path(role) %>
          </td>
          <td class="delete-row">
            <%= link_to 'delete', role_path(role.id),
                        method: :delete,
                        data: {confirm: 'Are you sure?'} %>
          </td>
        </tr>
      <% end %>

    </table>

  </section>


  <p>
    <%= link_to 'Trailer', @movie.find_url %>
  </p>

  <div class="btn btn-edit">
    <%= link_to 'edit', edit_movie_path(@movie.id) %>
  </div>

  <div class="btn btn-back">
    <%= link_to 'back', movies_path %>
  </div>

</div>