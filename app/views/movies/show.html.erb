<div class="show">

  <h1><%= @movie.title %></h1>

  <section class="movie-data">
    <h3>Details</h3>

    <p2>
      published: <%= @movie.year %>
    </p2>

    <p2>
      genre: <%= search_for_genre(@movie) %>
    </p2>
  </section>

  <section class="cast-information">

    <section class="btn-besides-text">
      <p3>Cast</p3>

      <a class="btn btn-add btn-role" href= <%= new_role_path %>>
        add new role
      </a>
    </section>

    <table class="all-db-entries">
      <tr>
        <th>Actor</th>
        <th>Character</th>
      </tr>
      <%= render partial: 'list_roles_actor', locals: {:roles => @roles} %>
    </table>
  </section>

  <section class="showtime-information">
    <h3>Showtimes</h3>
    <table class="all-db-entries">

      <tr>
        <th>Cinema</th>
        <th>Date</th>
        <th>Time</th>
      </tr>
      <%= render partial: 'list_showtimes', locals: {:showtimes => @showtimes} %>
    </table>

    <p>total shows <%= @movie.total_shows %></p>
    <p id="add-showtime">
      add showtime
    </p>
  </section>

  <section class="trailer">
    <h3>Trailer</h3>
    <%= trailer(@movie) %>
  </section>


  <a class="btn btn-edit" href=<%= edit_movie_path(@movie.id) %>>
    edit
  </a>

  <a class="btn btn-back" href=<%= movies_path %>>
    back
  </a>

</div>


<script>
    $(document).ready(function () {
        $(".btn-add").delay(4000).fadeOut(300).fadeIn(300).fadeOut(300).fadeIn(300);
        $(".showtime-information").hide(300).slideDown(2000);
    });

</script>
