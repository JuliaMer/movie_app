<% provide(:title, 'Create movie') %>
<h1>Create movie</h1>

<%= form_for(@movie) do |form| %>
  <%= render 'shared/movie_error_messages' %>

  <p>
    <%= form.label :title %><br />
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :year %><br />
    <%= form.text_field :year, :placeholder => 'yyyy' %>
  </p>

  <p>
    <%= form.label :genre %><br />
    <%= form.text_field :genre %>
  </p>

  <p>
    <%= form.label :url %><br />
    <%= form.text_field :url %>
  </p>


  <%= form.submit "Create movie", class: "btn btn-primary" %>
<% end %>
