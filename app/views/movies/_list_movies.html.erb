<% movies.each do |movie| %>
  <tr>
    <td class="first-table-entry">
      <%= link_to movie.title, movie %>
    </td>
    <td class="edit-row">
      <%= link_to 'edit', edit_movie_path(movie.id) %>
    </td>
    <td class="delete-row">
      <%= link_to 'delete', movie_path(movie.id),
                  method: :delete,
                  data: {confirm: 'Are you sure?'} %>
    </td>
  </tr>
<% end %>
