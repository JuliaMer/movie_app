<% provide(:title, 'Create actor') %>
<h1>Create actor</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@actor) do |f| %>
      <%= render 'shared/actor_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Create actor", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>