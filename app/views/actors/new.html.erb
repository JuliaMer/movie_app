<div class="creation">

<% provide(:title, 'Create actor') %>
<h1>Create actor</h1>

    <%= form_for(@actor) do |form| %>
      <%= render 'shared/actor_error_messages' %>

      <p>
      <%= form.label :name %><br>
      <%= form.text_field :name%>
      </p>

      <p>
      <%= form.label :birthday %><br>
      <%= form.text_field :birthday, :placeholder => 'dd.mm.yyyy'%>
      </p>

      <p>
      <%= form.submit "create actor"%>
      </p>

    <% end %>

  <div class="btn btn-back">
<%= link_to 'back', actors_path %>
  </div>

</div>