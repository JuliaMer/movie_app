<h1><%= @actor.name %></h1>

<p>
  Birthday:<br/>
  <%= @actor.birthday %>
</p>

<p>
  Age:<br/>
  <%= @actor.age %>
</p>

<table>
  <tr>
    <th>Movie</th>
    <th>Character</th>
  </tr>
  <% @roles.each do |role| %>
    <tr>
    <td>
      <%= link_to Movie.find(role.movie_id).title, movie_path(role.movie_id) %>
    </td>
    <td>
      <%= link_to role.character, role_path(role) %>
    </td>
    </tr>
  <% end %>

</table>

<p>
  <%= link_to 'Edit', edit_actor_path(@actor.id) %>
  <%= link_to 'Back', actors_path %>
</p>