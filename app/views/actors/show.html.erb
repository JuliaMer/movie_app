<div class="show">

  <h1><%= @actor.name %></h1>

  <section class="personal-data">
    <h3>Personal data</h3>

    <p2>
      born on: <%= @actor.birthday %>
    </p2>

    <p2>
      age: <%= @actor.age %>
    </p2>
  </section>


  <section class="filmography-data">

    <section class="btn-besides-text">
      <p3>Filmography</p3>

      <div class="btn btn-add btn-role">
        <%= link_to 'add new role', new_role_path %>
      </div>
    </section>

    <table class="all-db-entries">
      <tr>
        <th>Movie</th>
        <th>Character</th>
      </tr>
      <%= render partial: 'layouts/list_roles_movies', locals: {:roles => @roles}%>
    </table>

  </section>

  <div class="btn btn-edit">
    <%= link_to 'edit', edit_actor_path(@actor.id) %>
  </div>

  <div class="btn btn-back">
    <%= link_to 'back', actors_path %>
  </div>

</div>