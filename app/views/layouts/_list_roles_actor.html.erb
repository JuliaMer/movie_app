<% roles.each do |role| %>
  <tr>
    <td class="second-table-entry">
      <%= link_to Actor.find(role.actor_id).name, actor_path(role.actor_id) %>
    </td>
    <td class="second-table-entry">
      <%= link_to role.character, role_path(role) %>
    </td>
    <td class="edit-row">
      <%= link_to 'edit', edit_role_path(role) %>
    </td>
    <td class="delete-row">
      <%= link_to 'delete', role_path(role.id),
                  method: :delete,
                  data: {confirm: 'Are you sure?'} %>
    </td>
  </tr>
<% end %>